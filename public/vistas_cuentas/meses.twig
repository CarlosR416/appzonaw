{% extends "tabla.twig" %}

{% block titlepage %}
		<h3>Cuentas <small></small></h3>
{% endblock %}


{% block subtitlepage %}
            <h2>Relación por meses <small></small></h2>
{% endblock %}


{% block modalcontent %}
	<div class="x_panel">
        
        <div class="x_content">
            <br>
            <form class="form-label-left input_mask" id="modal_form">
                <input type="hidden" id="form_id" name="id">
                <div class="form-group row">
                    <label class="col-form-label col-md-3 col-sm-3 ">Mes a Generar</label>
                    <div class="col-md-6 col-sm-6 ">
                        <select class="form-control" name="mes"> 
                            <option>Enero</option>
                            <option>Febrero</option>
                            <option>Marzo</option>
                            <option>Abril</option>
                            <option>Mayo</option>
                            <option>Junio</option>
                            <option>Julio</option>
                            <option>Agosto</option>
                            <option>Septiembre</option>
                            <option>Octubre</option>
                            <option>Noviembre</option>
                            <option>Diciembre</option>
                        </select>
                    </div>
                    <div class="col-md-3 col-sm-3 ">
                        <select class="form-control" name="year"> 
                            <option>2020</option>
                            <option>2021</option>
                            <option>2022</option>
                            <option>2023</option>
                            <option>2024</option>
                            <option>2025</option>
                            <option>2026</option>
                            <option>2027</option>
                            <option>2028</option>
                        </select>
                    </div>
                </div>

            </form>
        </div>
    </div>
{% endblock %}


{% block headtable %}
    <tr>
        <th></th>
        <th>Nombre</th>
        <th>Cuenta Carlos</th>
        <th>Cuenta Vicente</th>
    </tr>
{% endblock %}


{% block bodytable %}
    <tr class="id_{{dato.id}}">

        {% set Carlos = dato.movimientos().where("id_cuenta","1").sum("valor") %}
        {% set Vicente = dato.movimientos().where("id_cuenta","2").sum("valor") %}


        <td></td>
        <td><a href="#">{{dato.nombre|upper}}</a></td>
        <td>{{Carlos}}</td>
        <td>{{Vicente}}</td>
        
    </tr>
{% endblock %}


{% block js %}
{{ parent() }}
<script>

    var index_tb = {
                    "data": [
                        ['id'],
                        ["nombre"],
                        ["clientes_activos"], 
                        ["clientes_retirados"], 
                        [ "gastos"], 
                        [ "ingresos"], 
                        [ "ingresos" ]
                    ],
                    "upper": [1] 
                };
    rutas.funcion.add = 'generar_mes';
    rutas.funcion.eliminar = 'eliminar_mes';
    rutas.funcion.getdata = 'obtener_mes';
    rutas.funcion.modificar = 'modificar_pago';

    // llama Modals
     Obtener_registro = function(e){

        var url = "{{base_dir_controller}}"+rutas.obtener;
        
        var data = {funcion: "", data: ""};
			data.data = CeldasCheck();
			data.funcion = rutas.funcion.getdata;

        if(data.data.id.length == 1){

            $.post(url, data).done(function(resp){

                resp = JSON.parse(resp);

                resp.forEach(function(value){

                    cargar_form(value);
                    
                });
                

                new template_modal({
                    title: "Modificar Datos del Mes",
                    btn_rigth_function: "Modificar_registro_msg()",
                    btn_rigth_text: "Guardar Cambios"
                });
                
                
            });

        }

    } 


    Nuevo_registro = function(e){

        new template_modal({
            title: "Generar Nuevo Mes",
            btn_rigth_function: "Agregar_registro()",
            reset_form: "modal_form",
            btn_rigth_text: "Crear Registro"
        });

    }

    Eliminar_msg = function(e){

        new template_modal_advert({
            title: "¿Esta Seguro que desea Eliminar?",
            btn_rigth_function: "Eliminar_registro()",
            btn_rigth_text: "Si, Eliminar"
        });
        
    }
</script>

{% endblock %}