        action_fetch(args){
    
            let url = args.dataform.url;
            const data = new FormData();
        
            data.append("funcion", args.dataform.funcion);
            

            for (const property in args.data) {

                data.append("data["+property+"]", args.data[property]);

            }   

            fetch(url, {
