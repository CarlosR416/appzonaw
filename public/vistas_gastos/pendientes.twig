                body: data
            })
            .then(res => res.json())
            .then(
                (result) => args.dataform.resp(result),
                (error) => {
                    console.log(error);
                }
            )
        }

        render(){

            return(
                <Modal
                    title={this.props.title}
                    button1={this.props.button1}
                    BodyContent={() => this.ContentDispatcher()}
                    submit={() => this.action_fetch(this.state)}
                />
            );

